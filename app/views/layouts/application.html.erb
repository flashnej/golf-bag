  <div class="header-container">
      <div class="div-left logo">
        <a class='header' href="/">
          <%=image_tag("Logo.png", alt: "Golf Bag")%>
        </a>
      </div>
      <div class="div-right authenticate">
        <%- if current_user -%>
          <p class='header'><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
        <%- else -%>
          <p class='header'><%= link_to 'Sign Up', new_user_registration_path %></p>
          <p class='header'><%= link_to 'Sign In', new_user_session_path %></p>
        <%- end -%>
      </div>
  </div>

  <div class="reactapp">
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <%- flash.each do |key, value| -%>
      <div class="flash flash-<%= key %>">
        <%= value %>
      </div>
    <%- end -%>

    <%= yield %>

    <%= javascript_include_tag 'application' %>

    <%- if Rails.env.development? || Rails.env.test? -%>
      <%= javascript_tag do %>
        window.railsEnv = '<%= Rails.env %>'
      <%- end -%>
    <%- end -%>
    <%= javascript_pack_tag 'application' %>

    <%= yield :extra_footer %>
  </div>
